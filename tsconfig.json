{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "types": ["node", "playwright"],
      "resolveJsonModule": true,  // Add this line
      "allowSyntheticDefaultImports": true  // Add this line if needed
    },
    "include": [
      "tests/**/*.ts",
      "pages/**/*.ts",
      "utils/**/*.ts",
      "data/**/*.json"  // Optionally include JSON files
    ]
  }
  